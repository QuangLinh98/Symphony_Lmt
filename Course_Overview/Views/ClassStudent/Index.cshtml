@model IEnumerable<LModels.ExModel.ClassStudent>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Student Information</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <style>
        .student-info {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .student-info h2 {
                margin-top: 0;
            }

            .student-info .info-row {
                margin-bottom: 10px;
                width: 100%;
                display: flex;
                justify-content: center;
            }

                .student-info .info-row span {
                    font-weight: bold;
                    margin-right: 5px;
                }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Student Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-3">
                                @if (!string.IsNullOrEmpty(item.Student?.ImagePath))
                                {
                                    <img src="@item.Student.ImagePath" alt="Student Image" class="img-fluid rounded" style="max-width: 200px; max-height: 200px;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image Available</span>
                                }
                            </div>
                            <div class="info-row mb-2">
                                <strong>Student Name:</strong> @item.Student?.Name
                            </div>
                            <div class="info-row mb-2">
                                <strong>Student Email:</strong> @item.Student?.Email
                            </div>
                            <div class="info-row mb-2">
                                <strong>Student Phone:</strong> @item.Student?.Phone
                            </div>
                            <div class="info-row mb-2">
                                <strong>Student Address:</strong> @item.Student?.Address
                            </div>
                            <div class="info-row mb-2">
                                <strong>Student Code:</strong> @item.Student?.IdentityCard
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <a href="@Url.Action("Edit", "Account", new { id = item.StudentID })" class="btn btn-primary">Edit</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>

