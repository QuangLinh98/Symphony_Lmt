

@model IEnumerable<LModels.Schedule>


<div class="container">
	<div class="row mb-4">
		<div class="col-12 text-center mt-5">
			<h6 class="section-title bg-white text-center text-primary px-3">Personal study schedule</h6>
		</div>
	</div>

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Course</th>
				<th>Class</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Start Time</th>
				<th>End Time</th>
				<th>Recurring Days</th>
				<th>Room</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null && Model.Any())
			{
				foreach (var schedule in Model)
				{
					<tr>
						<td>@schedule.Course?.CourseName</td>
						<td>@schedule.Class?.ClassName</td>
						<td>@schedule.StartDate.ToShortDateString()</td>
						<td>@schedule.EndDate.ToShortDateString()</td>
						<td>@schedule.StartTime.ToShortTimeString()</td>
						<td>@schedule.EndTime.ToShortTimeString()</td>
						<td>@schedule.RecurringDays</td>
						<td>@schedule.Room</td>
					</tr>
				}
			}
			else
			{
				<tr>
					<td colspan="8" class="text-center">No schedule found.</td>
				</tr>
			}
		</tbody>
	</table>
</div>