@model Course_Overview.Areas.Admin.Viewmodels.ResetPasswordViewModel

<div class="container-scroller">
	<div class="row justify-content-center">
		<div class="col-md-6 col-lg-4">
			<div class="card text-center" style="width: 500px;">
				<div class="card-header h5 text-white bg-gradient-primary">Change Password</div>
				<div class="card-body px-5">

					@*Show temptData Error*@
					@{
						var errorMessage = TempData["ErrorMessage"] as string;
					}

					@if (!string.IsNullOrEmpty(errorMessage))
					{
						<div class="alert alert-danger" role="alert">
							@errorMessage
						</div>
					}
					@*Show temptData Success*@
					@{
						var successMessage = TempData["SuccessMessage"] as string;
					}

					@if (!string.IsNullOrEmpty(successMessage))
					{
						<div class="alert alert-success" role="alert">
							@successMessage
						</div>
					}
					<form asp-action="ResetPassword" method="Post">
						<input type="hidden" asp-for="Token" />
						<ul id="password-requirements">
							<li id="length" class="invalid">At least 8 characters long</li>
							<li id="uppercase" class="invalid">At least one uppercase letter</li>
							<li id="lowercase" class="invalid">At least one lowercase letter</li>
							<li id="number" class="invalid">At least one number</li>
							<li id="special" class="invalid">At least one special character (#, $, etc.)</li>
						</ul>

						<div class="mb-3 mt-3 form-group">
							<label for="Password">Password</label>
							<input type="password" asp-for="Password" class="form-control my-3" />
						</div>

						<div class="mb-3 mt-3 form-group">
							<label for="ComfirmPasswod">Comfirm passwod</label>
							<input type="password" asp-for="ComfirmPasswod" class="form-control my-3" />
						</div>

						<button type="submit" data-mdb-ripple-init class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Change password</button>
						<div class="d-flex justify-content-between mt-4">
							<a class="" asp-action="Login" asp-controller="Auth" asp-area="Admin">Login</a>
							<a class="" asp-action="Register" asp-controller="Auth" asp-area="Admin">Register</a>
						</div>
					</form>

				</div>
			</div>
		</div>
	</div>
</div>
