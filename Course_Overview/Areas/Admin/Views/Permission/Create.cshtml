@using LModels
@model Permission

<div class="card shadow boder-0 mt-4">
	<div class="card-body p-4">
		<h2>Create Permission</h2>
		<form class="bg-gray" asp-action="Create">
			<div class="mb-3 mt-3 form-group">
				<label for="permissionname">Permission name:</label>
				<input type="text" class="form-control"
					   placeholder="Enter Role name" asp-for="PermissionName">
				<span class="text-danger" asp-validation-for="PermissionName"></span>
			</div>

			<div class="mb-3 mt-3 form-group">
				<label for="permissioncode">Permission code:</label>
				<input type="text" class="form-control"
					   placeholder="Enter Role code" asp-for="PermissionCode">
				<span class="text-danger" asp-validation-for="PermissionCode"></span>
			</div>


			<button type="submit" class="btn btn-secondary" asp-action="Index">Back</button>
			<button type="submit" class="btn btn-secondary">Submit</button>
		</form>
	</div>
</div>