@using LModels
@model IEnumerable<Permission>

<div class="row">
	<h4 class="card-title">Permission List</h4>
	<div class="text-end">
		<a class="btn btn-secondary" asp-action="Create" asp-area="Admin">
			<i class="bi bi-plus-circle"></i>
			Create a new Permission
		</a>
	</div>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Permission Name</th>
				<th>Permission Code</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td class="py-1">@item.PermissionId</td>
					<td>@item.PermissionName</td>
					<td>@item.PermissionCode</td>
					<td>
						<a class="btn btn-warning" asp-area="Admin" asp-route-id="@item.PermissionId" asp-action="Update">
							<i class="bi bi-pencil-fill"></i>
						</a>
						<a class="btn btn-danger" asp-area="Admin" asp-route-id="@item.PermissionId" asp-action="Delete">
							<i class="bi bi-trash3"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

